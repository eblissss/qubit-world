---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main
        class="relative w-screen h-screen overflow-hidden flex flex-col items-center justify-center"
        style="background: radial-gradient(ellipse at center, #0a0a2e 0%, #000000 70%);"
    >
        <div class="relative z-10 text-center">
            <h1 class="text-8xl font-bold mb-6 text-white">404</h1>
            <p class="text-xl text-gray-300 mb-8">Page Not Found</p>
            <a
                href="/"
                class="inline-block px-8 py-4 bg-gradient-to-tr from-cyan-500 to-fuchsia-600 text-white font-semibold rounded-lg hover:from-cyan-400 hover:to-fuchsia-500 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
                >Return</a
            >
        </div>
    </main>
</Layout>
